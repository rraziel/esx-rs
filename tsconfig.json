{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "removeComments": false,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}