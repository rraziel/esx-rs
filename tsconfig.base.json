{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "outDir": "./dist",
        "removeComments": false,
        "sourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jest"
        ],
        "baseUrl": "packages",
        "paths": {
            "@esx-rs/*": ["./*/src"]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "*.spec.ts"
    ]
}
