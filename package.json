{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "tsc --build packages",
    "compile:watch": "tsc --build packages --watch",
    "quality:lint": "tslint --project ./packages/tsconfig.lint.json --config ./packages/tslint.json",
    "test": "jest --no-cache --verbose",
    "test:coverage": "jest --no-cache --coverage",
    "test:watch": "jest --watch --no-cache --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "!packages/*/src/**/index.ts"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "tsConfigFile": "<rootDir>/packages/tsconfig.test.json"
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "@esx-rs/(.+)": "<rootDir>/node_modules/@esx-rs/$1/src/index.ts"
    },
    "roots": [
      "<rootDir>/packages"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/jest-junit-reporter",
    "testRegex": "\\.spec\\.ts", 
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@angular/common": "6.1.4",
    "@angular/core": "6.1.4",
    "@types/jest": "23.3.1",
    "@types/koa": "2.0.45",
    "@types/koa-bodyparser": "4.2.0",
    "@types/node": "8.10.10",
    "babel-core": "6.26.3",
    "babel-jest": "23.4.2",
    "es-decorator-utils": "0.1.2",
    "codecov": "3.0.4",
    "jest": "23.5.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-junit-reporter": "1.1.0",
    "koa": "2.5.2",
    "koa-bodyparser": "4.2.0",
    "koa-cookie": "1.0.0",
    "lerna": "3.1.2",
    "node-fetch": "2.1.2",
    "path-to-regexp": "2.2.1",
    "reflect-metadata": "0.1.12",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.0.1"
  }
}
