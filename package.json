{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "lerna run compile",
    "compile:watch": "tsc -p . --watch",
    "quality:lint": "tslint --project ./tsconfig.json --config ./conf/tslint.json",
    "test": "jest --no-cache --verbose",
    "test:coverage": "jest --no-cache --coverage",
    "test:watch": "jest --watch --no-cache --verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "!packages/*/src/**/index.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "@esx-rs/(.+)": "<rootDir>/node_modules/@esx-rs/$1/src/index.ts"
    },
    "roots": [
      "<rootDir>/packages"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/jest-junit-reporter",
    "testRegex": "\\.spec\\.ts", 
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@esx-rs/core": "0.2.1",
    "@esx-rs/server": "0.2.1",
    "@types/jest": "24.0.11",
    "codecov": "3.1.0",
    "jest": "22.4.3",
    "jest-create-mock-instance": "1.1.0",
    "jest-junit-reporter": "1.1.0",
    "lerna": "3.15.0",
    "ts-jest": "24.0.1",
    "ts-node": "7.0.1",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
	}
}
